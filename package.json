{
  "name": "odor",
  "version": "1.0.11",
  "description": "Static blog generator with parallel encoding, incremental builds, atomic writes, and an AI agent for spellcheck, tagging, summarization, and quality evaluation.",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "bin": {
    "odor": "bin/odor.js",
    "odor-build": "bin/odor-build.js",
    "odor-status": "bin/odor-status.js",
    "odor-agent": "bin/odor-agent.js",
    "odor-server": "bin/odor-server.js"
  },
  "exports": {
    ".": "./src/lib/index.js",
    "./queue": "./src/queue/index.js",
    "./kit": "./src/kit/index.js"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "AGENTS.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "test:watch": "node --test --watch test/**/*.test.js",
    "save": "git add .; git commit -m 'Updated Release'; npm version patch; npm publish; git push --follow-tags;"
  },
  "keywords": [
    "blog",
    "static-site",
    "muriel",
    "flow",
    "agent",
    "ai",
    "spellcheck",
    "incremental",
    "atomic"
  ],
  "dependencies": {
    "marked": "^17.0.1",
    "muriel": "^1.0.5",
    "sharp": "^0.34.5"
  },
  "author": "catpea (https://github.com/catpea)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/catpea/odor.git"
  },
  "bugs": {
    "url": "https://github.com/catpea/odor/issues"
  },
  "homepage": "https://catpea.github.io/odor",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/catpea"
  }
}
